<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- 
        HttpPlatformHandler is required for FastAPI to run on IIS properly with WebSockets support.
        Ensure "HttpPlatformHandler" is installed in IIS modules.
      -->
      <add name="PythonHandler" path="*" verb="*" modules="HttpPlatformHandler" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    <httpPlatform processPath="C:\S4T_SMS\backend\s4t_koroshi_sms_backend\venv\Scripts\python.exe"
                  arguments="-m uvicorn src.main:app --host 127.0.0.1 --port %HTTP_PLATFORM_PORT%"
                  stdoutLogEnabled="true"
                  stdoutLogFile="C:\S4T_SMS\backend\s4t_koroshi_sms_backend\logs\iis_python.log"
                  startupTimeLimit="60"
                  processesPerApplication="1"
                  startupRetryCount="3">
      <environmentVariables>
        <!-- Set your environment variables here for production -->
        <environmentVariable name="PYTHONPATH" value="C:\S4T_SMS\backend\s4t_koroshi_sms_backend" />
        <environmentVariable name="DB_SERVER" value="localhost" />
        <environmentVariable name="DB_NAME" value="koroshi_sms" />
        <environmentVariable name="DB_USER" value="sa" />
        <environmentVariable name="DB_PASSWORD" value="YourStrong@Passw0rd" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
